<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
	<display-name>cat</display-name>

	<!-- This is required otherwise Jboss will look for applicationContext.xml in /WEB-INF rather than /WEB-INF/spring -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring/applicationContext.xml</param-value>
	</context-param>

	<context-param>
		<param-name>spring.profiles.default</param-name>
		<param-value>jboss</param-value>
	</context-param>

	<filter>
		<filter-name>catOpenEntityManagerInViewFilter</filter-name>
		<filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
		<init-param>
			<param-name>LocalEntityManagerFactoryBean</param-name>
			<param-value>cat</param-value>
		</init-param>
	</filter>

	<filter>
	        <filter-name>springSecurityFilterChain</filter-name>
	        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	
	<filter>
		<filter-name>noCache</filter-name>
		<filter-class>com.scottlogic.cat.NoCacheFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>catOpenEntityManagerInViewFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
	        <filter-name>springSecurityFilterChain</filter-name>
	        <url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
	        <filter-name>noCache</filter-name>
	        <url-pattern>/index.html</url-pattern>
	</filter-mapping>

	<filter-mapping>
	        <filter-name>noCache</filter-name>
	        <url-pattern>/</url-pattern>
	</filter-mapping>

	<!-- IMPORTANT. Class loader and classes may not be properly released if 
		this listener is omitted. In particular, sun.awt.AppContext (loaded by Spring 
		JavaBeans) will live forever and cause OOM: PermGen Space. -->
	<listener>
		<listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
	</listener>

	<listener>
		<listener-class>com.scottlogic.cat.ContextListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
	        <param-name>contextConfigLocation</param-name>
	        <!-- 
	        Don't use the same Spring configuration as in contextConfigLocation, otherwise it will get loaded twice and the scheduler will run twice
	        http://stackoverflow.com/questions/3672289/spring-3-scheduled-task-running-3-times
	         -->
	        <param-value>classpath:spring/spring-servlet.xml</param-value>
	    </init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>spring</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	
	<session-config>
 		<session-timeout>240</session-timeout>
	</session-config>
	
</web-app>
